@model GoogleProfileApp.Models.ApplicationUser

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h5 class="mb-0">User Profile</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3 px-4">
                            <label class="text-secondary fw-bold">First Name :
                                <span class="text-success fw-bold">@Model.FirstName</span>
                        
                            </label>
                        </li>

                        <li class="list-group-item d-flex justify-content-between align-items-center py-3 px-4">
                            <label class="text-secondary fw-bold">
                                Last Name :
                                <span class="text-success fw-bold">@Model.LastName</span>
                        </li>

                        <li class="list-group-item py-3 px-4 bg-light">
                            <div class="text-secondary fw-bold mb-2">Google Identifier</div>
                            <div class="bg-white p-2 border rounded small font-monospace text-danger shadow-sm">
                                @Model.GoogleId
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="card-footer bg-white border-top-0 p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-controller="User" asp-action="Profile" class="btn btn-warning px-4 fw-bold shadow-sm">
                            Edit Profile
                        </a>
                        <form asp-controller="Account" asp-action="Login" method="post" class="m-0">
                            <button type="submit" class="btn btn-outline-danger px-4 fw-bold shadow-sm">
                                Sign Out
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <p class="text-center text-muted mt-3 small">
                <i class="bi bi-shield-check"></i> Securely signed in via Google OAuth 2.0
            </p>
        </div>
    </div>
</div>
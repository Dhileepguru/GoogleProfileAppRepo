@model GoogleProfileApp.Models.ApplicationUser

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white py-3 text-center">
                    <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Update Your Profile</h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="UpdateProfile" asp-controller="User" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="GoogleId" />

                        <ul style="list-style-type: none; padding: 0;">
                            <li class="mb-4">
                                <label asp-for="FirstName" class="form-label fw-bold text-secondary">First Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                                    <input asp-for="FirstName" class="form-control form-control-lg fs-6" placeholder="Enter first name" required />
                                </div>
                            </li>

                            <li class="mb-4">
                                <label asp-for="LastName" class="form-label fw-bold text-secondary">Last Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                                    <input asp-for="LastName" class="form-control form-control-lg fs-6" placeholder="Enter last name" required />
                                </div>
                            </li>

                            <li class="mt-4">
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success btn-lg fs-6 shadow-sm">
                                        Save Changes
                                    </button>
                                    <a asp-controller="Home" asp-action="Welcome" class="btn btn-link text-decoration-none text-muted">
                                        Cancel & Go Back
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="bi bi-lock-fill"></i> Changes will be saved to the database
                </small>
            </div>
        </div>
    </div>
</div>